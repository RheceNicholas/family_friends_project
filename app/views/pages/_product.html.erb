<div class="col-xl-3 col-lg-6 col-md-6 margin-top-15">
  <%= link_to product do %>
  <div class="card listing-card">
    <div class="view overlay hm-white-slight">

    <%= image_tag product.image.url(:medium), width: '100%', class: 'cursor' %>

    </div>
    <div class="card-body text-center no-padding">
      <h4 class="card-title card-listing-title"><%= product.name %></h4>
      <p class="card-text">
        <div class="card-footer">
            <span class="left"><%= number_to_currency product.price_in_cents %></span>
            <span class="right"><%= fa_icon "shopping-cart" %></span>
        </div>
      </p>
    </div>
  </div>
  <% end %>
</div>
