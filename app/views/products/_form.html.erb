<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="login-container">

<div class="card new-product-card">
  <h1 class="new-product">New Product</h1>
  <div class="md-form">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label class="btn btn-primary btn-sm">
      Upload Image <%= form.file_field :image, style: 'display:none' %>
    </label>
  </div>
  
  <div class="md-form">
    
    <%= form.text_area :description, id: :product_description, class: "form-control text-area-description", placeholder: "Description" %>
  </div>
  
  <div class="md-form">
    <%= form.label :price %>
    <%= form.number_field :price_in_cents, id: :product_price_in_cents, step: 0.01, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
  <hr>
  <%= link_to 'Back', products_path, class: 'btn btn-secondary btn-sm' %>
  
  </div>
</div>
<% end %>
